<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.centerm.fud_demo.dao.SuperVipDao">

    <insert id="becomeAdmin" parameterType="long">
         INSERT INTO fud.user_role(user_id,role_id)
         VALUES (#{userId}, 2)
    </insert>
    <delete id="removeAdmin" parameterType="long">
        DELETE FROM fud.user_role
        WHERE fud.user_role.user_id=#{userId}
    </delete>
    <select id="getUserRoles" parameterType="long" resultType="int">
        SELECT fud.user_role.role_id roleId
        FROM fud.user_role
        where fud.user_role.user_id=#{userId}
    </select>
    <select id="getAllUserExceptSuperVIP" resultType="com.centerm.fud_demo.entity.User">
        SELECT u.id,u.username,u.create_time createTime,u.state
        FROM fud.user u
        LEFT JOIN  fud.user_role ur
        ON ur.user_id=u.id
        WHERE ur.role_id !=3
        ORDER BY u.id
    </select>
    <select id="getAllUserRoles" resultType="java.lang.Integer">
        SELECT user_role.role_id roleId
        FROM fud.user_role
        WHERE user_role.role_id !=3
        ORDER BY user_id
    </select>
    <insert id="addUser" parameterType="long">
      INSERT INTO fud.user_role(user_id,role_id)
      VALUES (#{userId},1)
    </insert>
    <delete id="removeUser" parameterType="long">
        DELETE from user_role
        WHERE user_role.user_id=#{userId}
    </delete>
    <delete id="deleteUser" parameterType="long">
        DELETE FROM fud.user
        WHERE user.id=#{userId}
    </delete>
</mapper>